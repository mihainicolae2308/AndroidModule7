<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog" >
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:selectableItemBackgroundBorderless" tools:ignore="NewApi">@android:color/holo_blue_dark</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@android:color/holo_green_dark</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@android:color/holo_red_dark</item>
    </style>

</resources>
